<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.gabo.mobile.mystores.activities.StoreActivity">

    <EditText
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_store_name"
        android:hint="Store"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:layout_margin="4dp"
        android:id="@+id/et_store_address"
        android:layout_below="@+id/et_store_name"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/et_store_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Owner"
        android:layout_margin="4dp"
        android:id="@+id/et_store_owner"
        android:layout_below="@+id/et_store_address"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/et_store_address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="City"
        android:layout_margin="4dp"
        android:id="@+id/et_store_city"
        android:layout_below="@+id/et_store_owner"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/et_store_owner" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="save"
        android:id="@+id/btn_save_store"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/et_store_city" />
</RelativeLayout>
